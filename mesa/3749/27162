<script>
    document.getElementById('btnTabla').addEventListener('click', function() {
        document.getElementById('tabla').classList.remove('col-md-6');
        document.getElementById('tabla').classList.add('col-md-12');
        document.getElementById('acta').style.display = 'none';
        document.getElementById('mixContainer').classList.add('d-none');
        document.getElementById('tabla').style.display = 'block';

    });

    document.getElementById('btnMix').addEventListener('click', function() {
        document.getElementById('tabla').style.display = 'none';
        document.getElementById('acta').style.display = 'none';
        document.getElementById('mixContainer').classList.remove('d-none');
    });

    document.getElementById('btnActa').addEventListener('click', function() {
        document.getElementById('tabla').style.display = 'none';
        document.getElementById('acta').classList.remove('col-md-6');
        document.getElementById('acta').classList.add('col-md-12');
        document.getElementById('acta').style.display = 'block';
        document.getElementById('mixContainer').classList.add('d-none');
    });
</script>

